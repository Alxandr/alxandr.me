.post-list
  .post-title
    margin-top: 0
    margin-bottom: .2em
    font-size: 1.5rem
    line-height: 1.3em

    a
      color: #333
      text-decoration: none
      font-weight: 100
      cursor: pointer

      &:hover
        color: #b9301c
  
  .excerpt
    margin: 0
    font-size: .9rem
    color: #999
  
  .post-meta
    margin: .7em 0 0 0
    font-size: .9rem
    color: #c7c7c7
  
  .post-date
    font-size: .8rem
    color: #c7c7c7
    margin-right: .5em
    display: inline
  
  .post-tags
    font-size: .8rem
    display: inline
  
  .disqus-comment-count
    font-size: .8rem
    color: #c7c7c7
    margin-right: .5em
    display: inline
    text-decoration: none
    font-weight: 100
    cursor: pointer

    &:hover
      color: #b9301c
