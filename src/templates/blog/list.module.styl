.postTitle {
  margin-top: 0;
  margin-bottom: 0.2em;
  font-size: 1.5rem;
  line-height: 1.3em;
}

.postTitleLink {
  color: #333;
  text-decoration: none;
  font-weight: 100;
  cursor: pointer;
}

.excerpt {
  margin: 0;
  font-size: 0.9rem;
  color: #999;
}

.postMeta {
  margin: 0.7em 0 0;
  font-size: 0.9rem;
  color: #c7c7c7;
}

.postDate {
  margin: -10px 0 10px;
  margin-right: 0.5em;
  color: #c7c7c7;
  display: inline;
  font-size: 0.8rem;
}

.postTags {
  font-size: 0.8rem;
  display: inline;
}

.commentLink {
  color: #c7c7c7;
}