.topImage {
  position: fixed;
  z-index: -1;
  width: 100%;
  height: 500px;
  background: url('./cover.jpg') top left no-repeat #666;
  background-size: cover;
}

.topImageOverlay {
  background-color: rgba(12, 12, 12, 0.7);
  width: 100%;
  height: 100%;
  transition: background-color 0.2s;

  .active.sticky & {
    background-color: white;
  }
}

.header {
  margin: 0;
  font-size: 2.5rem;
  letter-spacing: 4px;
  color: #fff;
  position: absolute;
  width: 100%;
  text-align: center;
  padding-top: 160px;
  top: 0;
  z-index: 1;
  transition: padding-top 0.2s, background-color 0.2s, color 0.2s, border-bottom 0.2s;

  @media (max-width: 490px) {
    font-size: 1.5rem;
  }

  &.active {
    position: fixed;

    &.sticky {
      padding-top: 20px;
      background-color: white;
      color: black;
      border-bottom: 1px solid #ddd;
    }
  }
}

.title {
  margin: 0;
  font-size: inherit;
  font-weight: 300px;
  letter-spacing: 4px;
  display: inline-block;
  border-bottom: 1px solid white;

  & > a {
    color: inherit;
    text-decoration: none;
    font-family: 'Roboto Slab', serif;
    font-weight: 300px;
  }
}

.subtitle {
  margin: 0;
  font-weight: 100px;
  padding-top: 10px;
  padding-bottom: 10px;
  font-size: 0.3em;
}

.main {
  padding-top: 530px;
}

.mainBg {
  background-color: white;
  padding: 20px;
}

.content {
  max-width: 800px;
  margin: 0 auto;
  position: relative;
}